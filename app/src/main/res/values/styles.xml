<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Button style used for numeric buttons (light rounded) -->
    <style name="DarkButton">
        <!-- Background is a rounded drawable so the button looks like a pill/circle -->
        <item name="android:background">@drawable/bg_button_light</item>
        <!-- Dark text on light buttons -->
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">28sp</item>

        <!-- Grid sizing: keep 0dp and weights so GridLayout equally sizes buttons -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>

        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Slightly darker/secondary light button (top row: AC, â†, %) -->
    <style name="GrayButton" parent="DarkButton">
        <item name="android:background">@drawable/bg_button_gray</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Orange operator buttons -->
    <style name="OrangeButton" parent="DarkButton">
        <item name="android:background">@drawable/bg_button_orange</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>